@model IEnumerable<AymanProject.Models.Project>

@{
    ViewData["Title"] = "Projects";

    var lang = Context.Items["Lang"]?.ToString() ?? "en";
    bool isArabic = lang == "ar";
}

<div class="container mt-5" dir="@(isArabic ? "rtl" : "ltr")">
    <h1 class="mb-4 text-center">
        @(isArabic ? "قائمة المشاريع" : "Project List")
    </h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" asp-route-lang="@lang" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> @(isArabic ? "إضافة مشروع" : "Create New Project")
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@(isArabic ? "العنوان" : "Title")</th>
                <th>@(isArabic ? "الموقع" : "Location")</th>
                <th>@(isArabic ? "الوصف" : "Description")</th>
                <th>@(isArabic ? "تاريخ البدء" : "Submitted On")</th>
                <th>@(isArabic ? "تاريخ الانتهاء" : "End On")</th>
                <th>@(isArabic ? "العمليات" : "Actions")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Location</td>
                    <td>@item.Description</td>
                    <td>@item.SubmittedOn.ToShortDateString()</td>
                    <td>@item.EndOn.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" asp-route-lang="@lang" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> @(isArabic ? "تعديل" : "Edit")
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" asp-route-lang="@lang" class="btn btn-sm btn-info text-white">
                            <i class="bi bi-info-circle"></i> @(isArabic ? "تفاصيل" : "Details")
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" asp-route-lang="@lang" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> @(isArabic ? "حذف" : "Delete")
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
