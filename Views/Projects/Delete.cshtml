@model AymanProject.Models.Project

@{
    ViewData["Title"] = "Delete";
    var lang = Context.Items["Lang"]?.ToString() ?? "en";
    bool isArabic = lang == "ar";
}

<div class="container mt-4" dir="@(isArabic ? "rtl" : "ltr")">
    <h1>@(isArabic ? "حذف المشروع" : "Delete Project")</h1>

    <h3 class="text-danger">@((isArabic ? "هل أنت متأكد من حذف هذا المشروع؟" : "Are you sure you want to delete this project?"))</h3>

    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SubmittedOn)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SubmittedOn)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EndOn)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndOn)</dd>
    </dl>

    <form asp-action="Delete" asp-route-lang="@lang">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@(isArabic ? "تأكيد الحذف" : "Confirm Delete")" class="btn btn-danger" />
        <a asp-action="Index" asp-route-lang="@lang" class="btn btn-secondary">
            @(isArabic ? "رجوع إلى القائمة" : "Back to List")
        </a>
    </form>
</div>
