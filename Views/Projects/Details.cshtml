@model AymanProject.Models.Project
@using AymanProject.Models

@{
    ViewData["Title"] = "Details";
    var lang = ViewData["Lang"]?.ToString() ?? "en";
    bool isArabic = (bool)(ViewData["IsArabic"] ?? false);
}

<div class="container mt-4" dir="@(isArabic ? "rtl" : "ltr")">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    @(isArabic ? "تفاصيل المشروع" : "Project Details")
                </h3>
                
                <!-- Language Switcher -->
                <div class="btn-group">
                    <a href="?lang=en" class="btn btn-sm @(lang == "en" ? "btn-light" : "btn-outline-light")">
                        @TranslationHelper.Translate("English", lang)
                    </a>
                    <a href="?lang=ar" class="btn btn-sm @(lang == "ar" ? "btn-light" : "btn-outline-light")">
                        @TranslationHelper.Translate("Arabic", lang)
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">@TranslationHelper.Translate("Title", lang):</dt>
                        <dd class="col-sm-8">
                            <h5 class="text-primary mb-0">@Model.Title</h5>
                        </dd>

                        <dt class="col-sm-4">@TranslationHelper.Translate("Location", lang):</dt>
                        <dd class="col-sm-8">
                            <div class="border-bottom pb-2">
                                <i class="bi bi-geo-alt"></i> @Model.Location
                            </div>
                        </dd>

                        <dt class="col-sm-4">@TranslationHelper.Translate("Description", lang):</dt>
                        <dd class="col-sm-8">
                            <div class="border-bottom pb-2">@Model.Description</div>
                        </dd>

                        <dt class="col-sm-4">@TranslationHelper.Translate("SubmittedOn", lang):</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">
                                <i class="bi bi-calendar-plus"></i> @Model.SubmittedOn.ToString("yyyy-MM-dd")
                            </span>
                        </dd>

                        <dt class="col-sm-4">@TranslationHelper.Translate("EndOn", lang):</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success fs-6">
                                <i class="bi bi-calendar-check"></i> @Model.EndOn.ToString("yyyy-MM-dd")
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <!-- Project Stats -->
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6 class="card-title">@(isArabic ? "معلومات إحصائية" : "Project Stats")</h6>
                            
                            @if (Model.TotalScore.HasValue)
                            {
                                <div class="mb-3">
                                    <div class="display-6 text-success">@Model.TotalScore.Value.ToString("0.1")%</div>
                                    <small class="text-muted">@(isArabic ? "النتيجة الإجمالية" : "Total Score")</small>
                                </div>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <div class="display-6 text-muted">--</div>
                                    <small class="text-muted">@(isArabic ? "لم يتم التقييم بعد" : "Not evaluated yet")</small>
                                </div>
                            }
                            
                            <!-- Duration -->
                            @{
                                var duration = (Model.EndOn - Model.SubmittedOn).Days;
                            }
                            <div class="mb-2">
                                <small class="text-muted">@(isArabic ? "المدة" : "Duration")</small>
                                <div class="fw-bold">@duration @(isArabic ? "يوم" : "days")</div>
                            </div>

                            <!-- Status -->
                            <div class="mb-2">
                                <small class="text-muted">@(isArabic ? "الحالة" : "Status")</small>
                                <div>
                                    @if (Model.EndOn < DateTime.Now)
                                    {
                                        <span class="badge bg-secondary">@(isArabic ? "مكتمل" : "Completed")</span>
                                    }
                                    else if (Model.SubmittedOn <= DateTime.Now && Model.EndOn >= DateTime.Now)
                                    {
                                        <span class="badge bg-success">@(isArabic ? "نشط" : "Active")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@(isArabic ? "مجدول" : "Scheduled")</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Evaluation Summary -->
            @if (Model.ProjectMainCriterians?.Any() == true)
            {
                <div class="mt-4">
                    <h5 class="mb-3">
                        <i class="bi bi-star-fill text-warning"></i> @(isArabic ? "ملخص التقييم" : "Evaluation Summary")
                    </h5>
                    
                    <div class="row">
                        @foreach (var pmc in Model.ProjectMainCriterians.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <h6 class="card-title text-truncate">
                                            @(isArabic ? pmc.MainCriterian.Text_Ar : pmc.MainCriterian.Text_En)
                                        </h6>
                                        <div class="display-6 text-info">@pmc.UserEvaluation%</div>
                                        <small class="text-muted">
                                            @(isArabic ? "النقاط: " : "Score: ")@pmc.CalculateScore().ToString("0.1")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (Model.ProjectMainCriterians.Count() > 3)
                    {
                        <div class="text-center">
                            <a asp-action="EvaluationSummary" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                @(isArabic ? "عرض التقييم الكامل" : "View Full Evaluation") 
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="mt-4">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        @(isArabic ? "لم يتم تقييم هذا المشروع بعد." : "This project has not been evaluated yet.")
                        <a asp-action="Evaluate" asp-route-id="@Model.Id" class="btn btn-sm btn-success ms-2">
                            <i class="bi bi-star"></i> @(isArabic ? "تقييم الآن" : "Evaluate Now")
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> @(isArabic ? "رجوع" : "Back")
                </a>

                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-warning">
                        <i class="bi bi-pencil"></i> @TranslationHelper.Translate("Edit", lang)
                    </a>

                    <a asp-action="Evaluate" asp-route-id="@Model.Id"
                       class="btn btn-success">
                        <i class="bi bi-star"></i> @TranslationHelper.Translate("Evaluate", lang)
                    </a>

                    @if (Model.ProjectMainCriterians?.Any() == true)
                    {
                        <a asp-action="EvaluationSummary" asp-route-id="@Model.Id"
                           class="btn btn-info">
                            <i class="bi bi-chart-bar"></i> @(isArabic ? "التقييم الكامل" : "Full Evaluation")
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}

@section Styles {
    <style>
        .border-bottom {
            border-bottom: 1px solid #dee2e6 !important;
            padding-bottom: 8px;
            margin-bottom: 8px;
        }
        
        .card-footer .btn {
            margin: 0 2px;
        }
        
        @if (isArabic) {
            <text>
            .btn-group {
                direction: ltr;
            }
            </text>
        }
    </style>
}