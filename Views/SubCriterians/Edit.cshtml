@model AymanProject.Models.SubCriterian
@{
    ViewData["Title"] = "Edit";
    var lang = Context.Items["Lang"]?.ToString() ?? "en";
    bool isArabic = lang == "ar";
}

<div class="container mt-4" dir="@(isArabic ? "rtl" : "ltr")">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                @(isArabic ? "تعديل المعيار الفرعي" : "Edit Sub Criterian")
            </h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="MainId" /> <!-- Changed to hidden field -->

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Text_Ar" class="control-label">@(isArabic ? "النص (عربي)" : "Text (Arabic)")</label>
                            <input asp-for="Text_Ar" class="form-control" />
                            <span asp-validation-for="Text_Ar" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Text_En" class="control-label">@(isArabic ? "النص (إنجليزي)" : "Text (English)")</label>
                            <input asp-for="Text_En" class="form-control" />
                            <span asp-validation-for="Text_En" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Weight" class="control-label">@(isArabic ? "الوزن" : "Weight")</label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> @(isArabic ? "حفظ" : "Save")
                    </button>
                    <a asp-action="Details" asp-controller="MainCriterians"
                       asp-route-id="@Model.MainId" asp-route-lang="@lang"
                       class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> @(isArabic ? "رجوع" : "Back")
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}